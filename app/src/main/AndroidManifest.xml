<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.android.tourguide"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission. ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA"/>


    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.hbyadav.myapplication.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hbyadav.myapplication.Student"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hbyadav.myapplication.Student_home"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hbyadav.myapplication.Student_sign"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hbyadav.myapplication.Student_display"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hbyadav.myapplication.Student_schedule"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity android:name="com.hbyadav.myapplication.Profile" />
        <activity
            android:name="com.hbyadav.myapplication.Make_schedule"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.hbyadav.myapplication.Update_profile"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.hbyadav.myapplication.StHubWeatherActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
        <activity android:name="com.hbyadav.myapplication.StHubBrowserActivity" />
        <activity android:name="com.hbyadav.myapplication.StHubRSSFeedActivity" />
    </application>
</manifest>